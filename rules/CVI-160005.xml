<?xml version="1.0" encoding="UTF-8"?>
<cobra document="https://github.com/WhaleShark-Team/cobra">
    <name value="拼接SQL注入"/>
    <language value="java"/>
    <match mode="function-param-controllable"><![CDATA[(executeQuery|execQuery|createQuery|newQuery|createQuery|queryForObject)]]></match>
    <rules>
        <rule value="executeQuery" class="java.sql.PreparedStatement"/>
        <rule value="execQuery" class="com.ga.riskfeed.db.SqlUtil.execQuery"/>
        <rule value="createQuery" class="java.sql.PreparedStatement"/>
        <rule value="createQuery" class="org.hibernate.Session"/>
        <rule value="newQuery" class="javax.jdo.PersistenceManager"/>
        <rule value="createQuery" class="javax.persistence.EntityManager"/>
        <rule value="queryForObject" class="org.springframework.jdbc.core.JdbcTemplate"/>
    </rules>
    <level value="8"/>
    <solution>
        ## 安全风险
        拼接SQL语句存在SQL注入风险

        ## 修复方案
        使用ORM中间件，比如raptor
    </solution>
    <test>
        <case assert="true"><![CDATA[q = statement.executeQuery("select * from Users where name = " + input);]]></case>
    </test>
    <status value="on"/>
    <author name="BlBana" email="blbana@qq.com"/>
</cobra>
